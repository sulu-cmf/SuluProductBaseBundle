<?xml version="1.0" encoding="UTF-8"?>
<serializer>
    <class name="Sulu\Bundle\ProductBundle\Entity\SpecialPrice" exclusion-policy="ALL">
        <property name="id" type="integer" expose="true" groups="preview"/>
        <property name="minimumQuantity" type="float" expose="true" groups="preview"/>
        <property name="price" type="float" expose="true" groups="preview"/>
        <property name="startDate" type="DateTime" expose="true" groups="preview"/>
