<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Product\BaseBundle\Entity\Template" table="pr_templates">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <one-to-many target-entity="Sulu\Bundle\Product\BaseBundle\Entity\TemplateTranslation" mapped-by="template"
                     field="translations"/>
        <one-to-many target-entity="Sulu\Bundle\Product\BaseBundle\Entity\Product" mapped-by="template"
                     field="products"/>

        <many-to-many target-entity="Sulu\Bundle\Product\BaseBundle\Entity\Attribute" field="attributes">
            <join-table name="pr_template_attributes">
                <join-columns>
                    <join-column name="idTemplates" referenced-column-name="id" nullable="false"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="idAttributes" referenced-column-name="id" nullable="false"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
