<form class="form-horizontal" id="product-pricing-form">
    <input type="hidden" id="id" data-mapper-property="id"/>
    <input type="hidden" id="type" data-mapper-property="type" data-type="attributes"/>

    <div class="grid-row small">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="price-info"><%= translate('product.price-info') %></label>
                <input class="form-element" type="text" id="price-info"
                       data-validation-max-length="255" data-mapper-property="priceInfo"/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="status" class="required"><%=translate('product.tax-class')%></label>

                <div id="tax-class"
                     data-aura-component="select@husky"
                     data-aura-data="{{ taxClasses|json_encode() }}"
                     data-aura-default-label="<%=translate('public.please-choose')%>"
                     data-aura-multiple-select="false"
                     data-aura-instance-name="tax-class"
                     data-type-label="tax-class"
                     data-type-required="tax-class"
                     data-mapper-property="taxClass"
                     data-type="husky-select"
                     data-validation-required="true"
                     data-aura-pre-selected-elements="[]"
                     data-form="true">
                </div>
            </div>
        </div>
    </div>

    <div class="grid-row">
        {#<div class="grid-col-6">#}
            {#<div class="form-group">#}
                {#<label for="cost"><%= translate('product.cost') %></label>#}
                {#<input class="form-element" type="text"#}
                       {#id="cost-info"#}
                       {#data-mapper-property="cost"#}
                       {#data-validation-required="false"#}
                       {#data-type="decimal" />#}
            {#</div>#}
        {#</div>#}
        <div class="grid-col-6">
            <div class="form-group">
                <label for="areGrossPrices" ><%=translate('product.areGrossPrices')%></label>
                <div>
                    <div class="custom-checkbox">
                        <input class="form-element husky-validate" type="checkbox"
                               id="areGrossPrices"
                               data-mapper-property="areGrossPrices"/>
                        <span class="icon"></span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="prices"  data-form="true" data-type="price-list" data-mapper-property="prices"></div>
    <div id="specialPrices"  data-form="true" data-type="price-list" data-mapper-property="specialPrices"></div>


</form>

{% block data %}
    <script type="text/javascript">
        (function() {
            var currencies = {{ currencies|json_encode()|raw }},
                defaultCurrency = {{ defaultCurrency|json_encode()|raw }};

            App.emit('sulu.product.set-currencies', currencies);
            App.emit('sulu.product.set-default-currency', defaultCurrency);
        })();
    </script>
{% endblock %}
