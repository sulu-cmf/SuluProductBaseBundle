<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Product\BaseBundle\Entity\TemplateTranslation" table="pr_template_translations">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="languageCode" type="string" length="10"/>
        <field name="name" type="string" length="255"/>
        <many-to-one target-entity="Sulu\Bundle\Product\BaseBundle\Entity\Template" field="template"
                     inversed-by="translations">
            <join-column name="idTemplates" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
